{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "args": ["-remote=auto"],
            "rootPatterns": ["go.mod", ".vim/", ".git/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "completeUnimported": true,
                "deepCompletion": true
            }
        },
        "cquery": {
            "command": "cquery",
            "filetypes": ["c", "cpp"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cacheDirectory": "/tmp/cquery"
            }
        }
    },
    "coc.preferences.currentFunctionSymbolAutoUpdate": false,
    "suggest.noselect": false,
    "suggest.minTriggerInputLength": 1,
    "suggest.snippetIndicator": "  üê®",
    "coc.preferences.formatOnType":true,
    "coc.preferences.formatOnSaveFiletypes": ["go"],
    "diagnostic.errorSign": "‚úò",
    "diagnostic.hintSign": "‚û§"
}
